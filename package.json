{
  "name": "floating-browser",
  "version": "1.0.0",
  "description": "A floating browser for macOS that stays on top of other windows",
  "main": "dist/main.js",
  "scripts": {
    "build": "tsc",
    "start": "npm run build && electron .",
    "dev": "tsc && electron .",
    "package:mac": "npm run build && electron-builder --mac"
  },
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.10.0",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "typescript": "^5.3.0"
  },
  "dependencies": {
    "electron-store": "^8.1.0"
  },
  "build": {
    "appId": "com.floating-browser.app",
    "productName": "Floating Browser",
    "mac": {
      "category": "public.app-category.utilities",
      "target": ["dmg", "zip"]
    },
    "files": [
      "dist/**/*",
      "src/index.html"
    ]
  }
}
